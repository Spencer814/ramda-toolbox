{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "checkJs": true,
    "declaration": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "build",
    "pretty": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "esnext",
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs/typedoc"
  },
  "exclude": [
    "node_modules/**/*",
    "node_modules/**/**",
    "jest.config.js",
    "src/jsdoc.js"
  ],
  "include": [
    "src/**/*"
  ]
}